{
    "manifest_version": 3,
    "name": "Copy LinkedIn Post",
    "version": "1.0",
    "description": "Adds a copy button to each LinkedIn post",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.linkedin.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icon.png"
    }
  }
  